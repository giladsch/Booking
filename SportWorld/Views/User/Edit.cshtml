@model SportWorld.Models.User
@{
    var param = new Dictionary<string, string>
{
                { "username", Model.UserName },
     };
}

<h4>User</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" asp-all-route-data="param">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserName" class="control-label"></label>
                <input asp-for="UserName" class="form-control" disabled />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gender" class="control-label"></label>
                <select asp-for="Gender" asp-items="Html.GetEnumSelectList<Gender>()" class="form-control">
                </select>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IsAdmin" class="control-label"></label>
                <input type="checkbox" asp-for="IsAdmin" checked="@Model.IsAdmin" />
                <span asp-validation-for="IsAdmin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a asp-action="Details" asp-controller="User">
                    <input type="submit" value="Save" class="btn btn-default" />
                </a>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Details" asp-controller="User">Back to List</a>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
