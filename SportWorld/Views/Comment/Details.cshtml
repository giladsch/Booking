@model IEnumerable<SportWorld.Models.Comment>

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>All the comments</h2>
<table class="table table-bordered table-responsive table-hover table-stripedk">
    <tr>
        <th>Publisher</th>
        <th>Text</th>
        <th>Date</th>
        <th>Rating</th>
        <th></th>
        <th></th>
    </tr>
    @foreach (var comment in Model)
    {
        <tr>
            <td>@comment.Publisher.UserName</td>
            <td>@comment.Text</td>
            <td>@comment.Date</td>
            <td>@comment.Rating</td>
            <td> @Html.ActionLink("Edit", "Edit", "Comment", new { id = comment.ID })</td> 
            <td> @Html.ActionLink("Delete", "Delete", "Comment", new { id = comment.ID })</td>
        </tr>
    }
</table>

<div>
    <a class="btn-link" href='javascript:history.go(-1)'>Previous page</a>
    <br />
    <a asp-controller="Home" asp-action="Index">Back to Home Page</a>
</div>

